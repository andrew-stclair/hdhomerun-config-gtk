<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="HdhomerunWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">HDHomeRun Config</property>
    <property name="default-width">1000</property>
    <property name="default-height">700</property>
    <property name="content">
      <object class="AdwNavigationSplitView" id="split_view">
        <property name="sidebar">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Devices</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar" id="header_bar">
                    <child type="end">
                      <object class="GtkButton" id="add_device_button">
                        <property name="icon-name">list-add-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Add Device Manually</property>
                        <signal name="clicked" handler="on_add_device_clicked" swapped="no"/>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton" id="refresh_button">
                        <property name="icon-name">view-refresh-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Refresh Device List</property>
                        <signal name="clicked" handler="on_refresh_clicked" swapped="no"/>
                      </object>
                    </child>
                  </object>
                </child>
                <property name="content">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkListBox" id="device_list">
                        <property name="selection-mode">single</property>
                        <style>
                          <class name="navigation-sidebar"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
        <property name="content">
          <object class="AdwNavigationPage">
            <property name="title" translatable="yes">Tuner</property>
            <property name="child">
              <object class="AdwToolbarView">
                <child type="top">
                  <object class="AdwHeaderBar"/>
                </child>
                <property name="content">
                  <object class="GtkStack">
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">placeholder</property>
                        <property name="child">
                          <object class="AdwStatusPage" id="placeholder_page">
                            <property name="icon-name">tv-symbolic</property>
                            <property name="title" translatable="yes">No Tuner Selected</property>
                            <property name="description" translatable="yes">Select a tuner from the device list to begin</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">tuner</property>
                        <property name="child">
                          <object class="HdhomerunTunerControls" id="tuner_controls"/>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About HDHomeRun Config</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
